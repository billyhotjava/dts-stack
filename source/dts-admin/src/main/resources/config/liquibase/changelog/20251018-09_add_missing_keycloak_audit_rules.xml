<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251018-09-add-missing-keycloak-rules" author="gemini-cli">
        <comment>Add missing audit rules for KeycloakApiResource</comment>

        <insert tableName="audit_operation_mapping">
            <column name="url_pattern" value="/api/keycloak/userprofile/test"/>
            <column name="http_method" value="GET"/>
            <column name="module_name" value="用户管理"/>
            <column name="action_type" value="测试"/>
            <column name="description_template" value="测试用户属性配置"/>
            <column name="source_table_template" value="用户"/>
            <column name="order_value" valueNumeric="60"/>
            <column name="enabled" valueBoolean="true"/>
        </insert>

        <insert tableName="audit_operation_mapping">
            <column name="url_pattern" value="/api/keycloak/users/{id}/abac-claims"/>
            <column name="http_method" value="GET"/>
            <column name="module_name" value="用户管理"/>
            <column name="action_type" value="查询"/>
            <column name="description_template" value="查询用户ABAC声明: {path.id}"/>
            <column name="source_table_template" value="用户"/>
            <column name="order_value" valueNumeric="59"/>
            <column name="enabled" valueBoolean="true"/>
        </insert>

        <insert tableName="audit_operation_mapping">
            <column name="url_pattern" value="/api/keycloak/groups/user/{userId}"/>
            <column name="http_method" value="GET"/>
            <column name="module_name" value="用户组管理"/>
            <column name="action_type" value="查询"/>
            <column name="description_template" value="查询用户所属的组: {path.userId}"/>
            <column name="source_table_template" value="用户组"/>
            <column name="order_value" valueNumeric="59"/>
            <column name="enabled" valueBoolean="true"/>
        </insert>

    </changeSet>
</databaseChangeLog>

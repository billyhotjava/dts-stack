<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="20251230-02-remove-portal-viewer-roles" author="admin">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="portal_menu_visibility"/>
            </and>
        </preConditions>
        <comment>Remove deprecated viewer data roles from portal menu visibility</comment>
        <delete tableName="portal_menu_visibility">
            <where>UPPER(role_code) IN ('ROLE_DEPT_DATA_VIEWER','ROLE_INST_DATA_VIEWER')</where>
        </delete>
    </changeSet>

</databaseChangeLog>

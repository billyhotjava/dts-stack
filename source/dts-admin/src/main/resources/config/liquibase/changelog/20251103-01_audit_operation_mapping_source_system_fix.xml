<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="20251103-01-ensure-source-system-column" author="codex">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="audit_operation_mapping" columnName="source_system"/>
            </not>
        </preConditions>
        <comment>Ensure audit_operation_mapping has source_system column before later updates</comment>
        <addColumn tableName="audit_operation_mapping">
            <column name="source_system" type="VARCHAR(32)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>

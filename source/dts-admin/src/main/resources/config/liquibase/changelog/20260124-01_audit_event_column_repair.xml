<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="20260124-01-audit-event-add-operation-group" author="codex">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="audit_event" columnName="operation_group"/>
            </not>
        </preConditions>
        <addColumn tableName="audit_event">
            <column name="operation_group" type="VARCHAR(64)"/>
        </addColumn>
    </changeSet>

    <changeSet id="20260124-02-audit-event-add-operation-type" author="codex">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="audit_event" columnName="operation_type"/>
            </not>
        </preConditions>
        <addColumn tableName="audit_event">
            <column name="operation_type" type="VARCHAR(32)"/>
        </addColumn>
    </changeSet>

    <changeSet id="20260124-03-audit-event-index-op-group" author="codex">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists tableName="audit_event" indexName="idx_audit_evt_op_group"/>
            </not>
        </preConditions>
        <createIndex indexName="idx_audit_evt_op_group" tableName="audit_event">
            <column name="operation_group"/>
        </createIndex>
    </changeSet>

    <changeSet id="20260124-04-audit-event-index-op-type" author="codex">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists tableName="audit_event" indexName="idx_audit_evt_op_type"/>
            </not>
        </preConditions>
        <createIndex indexName="idx_audit_evt_op_type" tableName="audit_event">
            <column name="operation_type"/>
        </createIndex>
    </changeSet>

    <changeSet id="20260124-05-audit-event-index-group-type" author="codex">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists tableName="audit_event" indexName="idx_audit_evt_group_type"/>
            </not>
        </preConditions>
        <createIndex indexName="idx_audit_evt_group_type" tableName="audit_event">
            <column name="operation_group"/>
            <column name="operation_type"/>
        </createIndex>
    </changeSet>

    <changeSet id="20260124-06-audit-event-backfill" author="codex">
        <preConditions onFail="MARK_RAN">
            <and>
                <columnExists tableName="audit_event" columnName="module"/>
                <columnExists tableName="audit_event" columnName="operation_group"/>
            </and>
        </preConditions>
        <sql>
            UPDATE audit_event
            SET operation_group = CASE
                    WHEN operation_group IS NULL OR trim(operation_group) = ''
                        THEN lower(regexp_replace(coalesce(module, 'general'), '[^A-Za-z0-9]+', '_', 'g'))
                    ELSE operation_group
                END
            WHERE operation_group IS NULL OR trim(operation_group) = '';
        </sql>
    </changeSet>
</databaseChangeLog>

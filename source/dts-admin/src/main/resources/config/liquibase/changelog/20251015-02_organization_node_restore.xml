<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="20251015-03-organization-node-ensure-table" author="codex" runAlways="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="organization_node"/>
            </not>
        </preConditions>
        <comment>Ensure organization_node table exists after legacy data cleanup</comment>
        <createTable tableName="organization_node">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_organization_node"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="data_level" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="contact" type="VARCHAR(255)"/>
            <column name="phone" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(2000)"/>
            <column name="parent_id" type="BIGINT"/>
            <column name="created_by" type="VARCHAR(50)"/>
            <column name="created_date" type="TIMESTAMP"/>
            <column name="last_modified_by" type="VARCHAR(50)"/>
            <column name="last_modified_date" type="TIMESTAMP"/>
            <column name="keycloak_group_id" type="VARCHAR(128)">
                <constraints nullable="true" unique="true"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="organization_node"
                                 baseColumnNames="parent_id"
                                 referencedTableName="organization_node"
                                 referencedColumnNames="id"
                                 constraintName="fk_org_parent"/>
    </changeSet>

    <changeSet id="20251015-04-organization-node-ensure-sequence" author="codex" runAlways="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="organization_node_seq"/>
            </not>
        </preConditions>
        <comment>Ensure organization_node sequence exists</comment>
        <createSequence sequenceName="organization_node_seq" startValue="1"/>
    </changeSet>

    <changeSet id="20251015-05-organization-node-ensure-autoincrement" author="codex" runAlways="true">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="organization_node"/>
                <sqlCheck expectedResult="0">
                    SELECT COUNT(*)
                    FROM information_schema.columns
                    WHERE table_name = 'organization_node'
                      AND column_name = 'id'
                      AND column_default LIKE 'nextval%'
                </sqlCheck>
            </and>
        </preConditions>
        <comment>Restore auto increment on organization_node.id</comment>
        <sql>ALTER TABLE organization_node ALTER COLUMN id SET DEFAULT nextval('organization_node_seq')</sql>
        <sql>ALTER SEQUENCE organization_node_seq OWNED BY organization_node.id</sql>
    </changeSet>

</databaseChangeLog>

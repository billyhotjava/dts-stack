<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="20260305-02-organization-root-flag" author="codex">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="organization_node" columnName="is_root"/>
            </not>
        </preConditions>

        <addColumn tableName="organization_node">
            <column name="is_root" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <update tableName="organization_node">
            <column name="is_root" valueBoolean="true"/>
            <where>parent_id IS NULL</where>
        </update>
    </changeSet>
</databaseChangeLog>

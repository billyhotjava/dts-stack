<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="20251116-01-personnel-master-tables" author="codex">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="person_import_batch"/>
            </not>
        </preConditions>

        <createTable tableName="person_import_batch">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="source_type" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="reference" type="varchar(128)"/>
            <column name="total_records" type="integer"/>
            <column name="success_records" type="integer"/>
            <column name="failure_records" type="integer"/>
            <column name="skipped_records" type="integer"/>
            <column name="dry_run" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="started_at" type="timestamp"/>
            <column name="completed_at" type="timestamp"/>
            <column name="error_message" type="varchar(2000)"/>
            <column name="metadata" type="jsonb"/>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>

        <createTable tableName="person_import_record">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="batch_id" type="bigint">
                <constraints nullable="false" referencedTableName="person_import_batch" referencedColumnNames="id" foreignKeyName="fk_person_record_batch" deleteCascade="true"/>
            </column>
            <column name="person_code" type="varchar(64)"/>
            <column name="external_id" type="varchar(128)"/>
            <column name="account" type="varchar(128)"/>
            <column name="full_name" type="varchar(128)"/>
            <column name="national_id" type="varchar(64)"/>
            <column name="dept_code" type="varchar(64)"/>
            <column name="dept_name" type="varchar(256)"/>
            <column name="dept_path" type="varchar(512)"/>
            <column name="title" type="varchar(128)"/>
            <column name="grade" type="varchar(64)"/>
            <column name="email" type="varchar(128)"/>
            <column name="phone" type="varchar(64)"/>
            <column name="lifecycle_status" type="varchar(32)"/>
            <column name="status" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="processed_at" type="timestamp"/>
            <column name="message" type="varchar(2000)"/>
            <column name="profile_id" type="bigint"/>
            <column name="active_from" type="timestamp"/>
            <column name="active_to" type="timestamp"/>
            <column name="payload" type="jsonb"/>
            <column name="attributes" type="jsonb"/>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>

        <createTable tableName="person_profile">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="person_code" type="varchar(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="external_id" type="varchar(128)"/>
            <column name="account" type="varchar(128)"/>
            <column name="full_name" type="varchar(128)"/>
            <column name="national_id" type="varchar(64)"/>
            <column name="dept_code" type="varchar(64)"/>
            <column name="dept_name" type="varchar(256)"/>
            <column name="dept_path" type="varchar(512)"/>
            <column name="title" type="varchar(128)"/>
            <column name="grade" type="varchar(64)"/>
            <column name="email" type="varchar(128)"/>
            <column name="phone" type="varchar(64)"/>
            <column name="lifecycle_status" type="varchar(32)"/>
            <column name="last_source_type" type="varchar(32)"/>
            <column name="last_reference" type="varchar(128)"/>
            <column name="last_batch_id" type="bigint"/>
            <column name="last_synced_at" type="timestamp"/>
            <column name="active_from" type="timestamp"/>
            <column name="active_to" type="timestamp"/>
            <column name="attributes" type="jsonb"/>
            <column name="raw_payload" type="jsonb"/>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>

        <createIndex tableName="person_import_batch" indexName="idx_person_batch_status">
            <column name="status"/>
        </createIndex>
        <createIndex tableName="person_import_batch" indexName="idx_person_batch_source">
            <column name="source_type"/>
        </createIndex>
        <createIndex tableName="person_import_batch" indexName="idx_person_batch_completed">
            <column name="completed_at"/>
        </createIndex>

        <createIndex tableName="person_import_record" indexName="idx_person_record_batch">
            <column name="batch_id"/>
        </createIndex>
        <createIndex tableName="person_import_record" indexName="idx_person_record_code">
            <column name="person_code"/>
        </createIndex>
        <createIndex tableName="person_import_record" indexName="idx_person_record_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="person_profile" indexName="idx_person_profile_account">
            <column name="account"/>
        </createIndex>
        <createIndex tableName="person_profile" indexName="idx_person_profile_external">
            <column name="external_id"/>
        </createIndex>
        <createIndex tableName="person_profile" indexName="idx_person_profile_dept">
            <column name="dept_code"/>
        </createIndex>
    </changeSet>

    <changeSet id="20251116-02-personnel-audit-mapping" author="codex">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="audit_operation_mapping"/>
        </preConditions>
        <insert tableName="audit_operation_mapping">
            <column name="url_pattern" value="/api/master-data/personnel/import/api"/>
            <column name="http_method" value="POST"/>
            <column name="module_name" value="主数据管理"/>
            <column name="operation_type" value="IMPORT"/>
            <column name="description_template" value="人员主数据 API 导入"/>
            <column name="source_table_template" value="person_import_batch"/>
            <column name="event_class" value="AuditEvent"/>
            <column name="order_value" valueNumeric="5"/>
            <column name="enabled" valueBoolean="true"/>
        </insert>
        <insert tableName="audit_operation_mapping">
            <column name="url_pattern" value="/api/master-data/personnel/import/excel"/>
            <column name="http_method" value="POST"/>
            <column name="module_name" value="主数据管理"/>
            <column name="operation_type" value="IMPORT"/>
            <column name="description_template" value="人员主数据 Excel 导入"/>
            <column name="source_table_template" value="person_import_batch"/>
            <column name="event_class" value="AuditEvent"/>
            <column name="order_value" valueNumeric="4"/>
            <column name="enabled" valueBoolean="true"/>
        </insert>
        <insert tableName="audit_operation_mapping">
            <column name="url_pattern" value="/api/master-data/personnel/import/manual"/>
            <column name="http_method" value="POST"/>
            <column name="module_name" value="主数据管理"/>
            <column name="operation_type" value="IMPORT"/>
            <column name="description_template" value="人员主数据人工导入"/>
            <column name="source_table_template" value="person_import_batch"/>
            <column name="event_class" value="AuditEvent"/>
            <column name="order_value" valueNumeric="3"/>
            <column name="enabled" valueBoolean="true"/>
        </insert>
        <insert tableName="audit_operation_mapping">
            <column name="url_pattern" value="/api/master-data/personnel/batches"/>
            <column name="http_method" value="GET"/>
            <column name="module_name" value="主数据管理"/>
            <column name="operation_type" value="READ"/>
            <column name="description_template" value="查询人员导入批次"/>
            <column name="source_table_template" value="person_import_batch"/>
            <column name="event_class" value="AuditEvent"/>
            <column name="order_value" valueNumeric="2"/>
            <column name="enabled" valueBoolean="true"/>
        </insert>
        <insert tableName="audit_operation_mapping">
            <column name="url_pattern" value="/api/master-data/personnel/profiles"/>
            <column name="http_method" value="GET"/>
            <column name="module_name" value="主数据管理"/>
            <column name="operation_type" value="READ"/>
            <column name="description_template" value="查询人员主数据列表"/>
            <column name="source_table_template" value="person_profile"/>
            <column name="event_class" value="AuditEvent"/>
            <column name="order_value" valueNumeric="2"/>
            <column name="enabled" valueBoolean="true"/>
        </insert>
        <insert tableName="audit_operation_mapping">
            <column name="url_pattern" value="/api/master-data/personnel/profiles/{personCode}"/>
            <column name="http_method" value="GET"/>
            <column name="module_name" value="主数据管理"/>
            <column name="operation_type" value="READ"/>
            <column name="description_template" value="查看人员主数据详情"/>
            <column name="source_table_template" value="person_profile"/>
            <column name="param_extractors" value="{&quot;targetRef&quot;:&quot;path.personCode&quot;}"/>
            <column name="event_class" value="AuditEvent"/>
            <column name="order_value" valueNumeric="1"/>
            <column name="enabled" valueBoolean="true"/>
        </insert>
    </changeSet>
</databaseChangeLog>

<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="20251115-01-add-change-request-columns" author="assistant">
        <addColumn tableName="change_request">
            <column name="category" type="varchar(64)" defaultValue="GENERAL">
                <constraints nullable="false"/>
            </column>
            <column name="summary" type="varchar(512)"/>
            <column name="last_error" type="text"/>
        </addColumn>
    </changeSet>

    <changeSet id="20251115-02-add-approval-retry-count" author="assistant">
        <addColumn tableName="admin_approval_request">
            <column name="retry_count" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>

<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="20251016-04-infra-data-source-secrets" author="codex">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="infra_data_source"/>
        </preConditions>
        <addColumn tableName="infra_data_source">
            <column name="secure_props" type="bytea"/>
        </addColumn>
        <addColumn tableName="infra_data_source">
            <column name="secure_iv" type="bytea"/>
        </addColumn>
        <addColumn tableName="infra_data_source">
            <column name="secure_key_version" type="varchar(32)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>

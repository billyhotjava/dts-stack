<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="20251112-02-portal-menu-metadata-text" author="codex">
        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <sqlCheck expectedResult="text">
                    SELECT data_type FROM information_schema.columns
                    WHERE table_name = 'portal_menu' AND column_name = 'metadata'
                </sqlCheck>
            </not>
        </preConditions>

        <modifyDataType tableName="portal_menu" columnName="metadata" newDataType="text"/>
    </changeSet>

</databaseChangeLog>

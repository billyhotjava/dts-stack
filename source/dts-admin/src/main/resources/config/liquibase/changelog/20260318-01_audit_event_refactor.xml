<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="20260318-01-audit-event-refactor" author="codex">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="audit_event"/>
        </preConditions>

        <comment>重建审计事件表，移除旧日志系统字段并引入操作留痕专用列</comment>

        <dropTable tableName="audit_event" cascadeConstraints="true"/>

        <createTable tableName="audit_event">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="occurred_at" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>
            <column name="source_system" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="actor" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="actor_role" type="VARCHAR(64)"/>
            <column name="actor_name" type="VARCHAR(128)"/>
            <column name="module" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="module_label" type="VARCHAR(128)"/>
            <column name="operation_group" type="VARCHAR(64)"/>
            <column name="operation_code" type="VARCHAR(128)"/>
            <column name="operation_name" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="operation_type" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="operation_type_text" type="VARCHAR(64)"/>
            <column name="result" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="summary" type="TEXT"/>
            <column name="target_table" type="VARCHAR(128)"/>
            <column name="target_ids" type="JSONB"/>
            <column name="target_id_text" type="VARCHAR(512)"/>
            <column name="target_labels" type="JSONB"/>
            <column name="target_snapshot" type="JSONB"/>
            <column name="details" type="JSONB"/>
            <column name="client_ip" type="INET"/>
            <column name="client_agent" type="VARCHAR(256)"/>
            <column name="operator_id" type="VARCHAR(128)"/>
            <column name="operator_name" type="VARCHAR(128)"/>
            <column name="operator_roles" type="JSONB"/>
            <column name="org_code" type="VARCHAR(64)"/>
            <column name="org_name" type="VARCHAR(128)"/>
            <column name="department_name" type="VARCHAR(128)"/>
            <column name="created_by" type="VARCHAR(128)"/>
            <column name="created_date" type="TIMESTAMPTZ" defaultValueDate="CURRENT_TIMESTAMP"/>
            <column name="last_modified_by" type="VARCHAR(128)"/>
            <column name="last_modified_date" type="TIMESTAMPTZ" defaultValueDate="CURRENT_TIMESTAMP"/>
        </createTable>

        <createIndex indexName="idx_audit_event_time" tableName="audit_event">
            <column name="occurred_at"/>
        </createIndex>

        <createIndex indexName="idx_audit_event_module_time" tableName="audit_event">
            <column name="module"/>
            <column name="occurred_at"/>
        </createIndex>

        <createIndex indexName="idx_audit_event_actor_time" tableName="audit_event">
            <column name="actor"/>
            <column name="occurred_at"/>
        </createIndex>

        <createIndex indexName="idx_audit_event_operation_type" tableName="audit_event">
            <column name="operation_type"/>
            <column name="occurred_at"/>
        </createIndex>

        <createIndex indexName="idx_audit_event_source_system" tableName="audit_event">
            <column name="source_system"/>
            <column name="occurred_at"/>
        </createIndex>

        <createIndex indexName="idx_audit_event_target_table" tableName="audit_event">
            <column name="target_table"/>
            <column name="occurred_at"/>
        </createIndex>

        <createIndex indexName="idx_audit_event_target_id_text" tableName="audit_event">
            <column name="target_id_text"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>

<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="20250930-01" author="codex">
        <createTable tableName="admin_approval_request">
            <column name="id" type="BIGINT" defaultValueSequenceNext="sequence_generator">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="requester" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="reason" type="TEXT"/>
            <column name="status" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="approver" type="VARCHAR(128)"/>
            <column name="decision_note" type="TEXT"/>
            <column name="error_message" type="TEXT"/>
            <column name="decided_at" type="timestamp"/>
            <column name="created_by" type="VARCHAR(50)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="VARCHAR(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
        <createIndex indexName="idx_admin_approval_request_status" tableName="admin_approval_request">
            <column name="status"/>
        </createIndex>
        <createIndex indexName="idx_admin_approval_request_type" tableName="admin_approval_request">
            <column name="type"/>
        </createIndex>
        <createIndex indexName="idx_admin_approval_request_requester" tableName="admin_approval_request">
            <column name="requester"/>
        </createIndex>
    </changeSet>

    <changeSet id="20250930-02" author="codex">
        <createTable tableName="admin_approval_item">
            <column name="id" type="BIGINT" defaultValueSequenceNext="sequence_generator">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="request_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="target_kind" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="target_id" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="seq_number" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="payload_json" type="jsonb">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="admin_approval_item"
                                  baseColumnNames="request_id"
                                  referencedTableName="admin_approval_request"
                                  referencedColumnNames="id"
                                  constraintName="fk_admin_approval_item_request"/>
        <addUniqueConstraint tableName="admin_approval_item"
                              columnNames="request_id, seq_number"
                              constraintName="uk_admin_approval_item_sequence"/>
        <createIndex indexName="idx_admin_approval_item_target" tableName="admin_approval_item">
            <column name="target_kind"/>
            <column name="target_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="20250930-03" author="codex">
        <createTable tableName="admin_keycloak_user">
            <column name="id" type="BIGINT" defaultValueSequenceNext="sequence_generator">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="kc_id" type="VARCHAR(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="username" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="full_name" type="VARCHAR(128)"/>
            <column name="email" type="VARCHAR(128)"/>
            <column name="phone" type="VARCHAR(64)"/>
            <column name="person_security_level" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="data_levels" type="jsonb">
                <constraints nullable="false"/>
            </column>
            <column name="realm_roles" type="jsonb"/>
            <column name="group_paths" type="jsonb"/>
            <column name="enabled" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="last_sync_at" type="timestamp"/>
            <column name="created_by" type="VARCHAR(50)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="VARCHAR(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
        <createIndex indexName="idx_admin_keycloak_user_username" tableName="admin_keycloak_user" unique="true">
            <column name="username"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>

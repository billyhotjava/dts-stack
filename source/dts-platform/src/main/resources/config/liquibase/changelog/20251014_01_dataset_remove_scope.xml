<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="20251014-01-drop-dataset-scope-index" author="platform">
        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <indexExists tableName="catalog_dataset" indexName="idx_catalog_dataset_scope"/>
        </preConditions>
        <dropIndex tableName="catalog_dataset" indexName="idx_catalog_dataset_scope"/>
    </changeSet>

    <changeSet id="20251014-02-drop-dataset-scope-columns" author="platform">
        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <columnExists tableName="catalog_dataset" columnName="scope"/>
        </preConditions>
        <comment>Remove catalog_dataset scope/share_scope columns after simplifying department model</comment>
        <dropColumn tableName="catalog_dataset" columnName="scope"/>
        <dropColumn tableName="catalog_dataset" columnName="share_scope"/>
    </changeSet>

</databaseChangeLog>

<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="20250315-01-create-olap-schema" author="platform">
        <preConditions onFail="MARK_RAN">
            <dbms type="postgresql"/>
            <sqlCheck expectedResult="0">
                SELECT COUNT(1) FROM pg_namespace WHERE LOWER(nspname) = LOWER('OLAP')
            </sqlCheck>
        </preConditions>
        <comment>Create dedicated OLAP schema for PostgreSQL fallback workspace</comment>
        <sql>
            CREATE SCHEMA IF NOT EXISTS "OLAP";
        </sql>
    </changeSet>

</databaseChangeLog>

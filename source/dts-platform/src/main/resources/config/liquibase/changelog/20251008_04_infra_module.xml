<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.16.xsd"
>
    <changeSet id="20251008-12-infra-datasource-secrets" author="platform">
        <addColumn tableName="infra_data_source">
            <column name="secure_props" type="bytea"/>
        </addColumn>
        <addColumn tableName="infra_data_source">
            <column name="secure_iv" type="bytea"/>
        </addColumn>
        <addColumn tableName="infra_data_source">
            <column name="secure_key_version" type="varchar(32)"/>
        </addColumn>
    </changeSet>

    <changeSet id="20251008-13-infra-storage-secrets" author="platform">
        <addColumn tableName="infra_data_storage">
            <column name="secure_props" type="bytea"/>
        </addColumn>
        <addColumn tableName="infra_data_storage">
            <column name="secure_iv" type="bytea"/>
        </addColumn>
        <addColumn tableName="infra_data_storage">
            <column name="secure_key_version" type="varchar(32)"/>
        </addColumn>
    </changeSet>

    <changeSet id="20251008-14-infra-connection-log" author="platform">
        <createTable tableName="infra_connection_test_log">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="data_source_id" type="uuid"/>
            <column name="request_payload" type="text"/>
            <column name="result" type="varchar(32)"/>
            <column name="message" type="varchar(512)"/>
            <column name="elapsed_ms" type="int"/>
            <column name="created_by" type="varchar(50)"/>
            <column name="created_date" type="timestamp"/>
            <!-- Align with AbstractAuditingEntity: include last_modified_* to match entity mapping -->
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
        <createIndex indexName="idx_infra_conn_log_datasource" tableName="infra_connection_test_log">
            <column name="data_source_id"/>
        </createIndex>
    </changeSet>

    <!-- Safety net for environments where the table might already exist without last_modified_* columns -->
    <changeSet id="20251009-01-infra-conn-log-add-last-modified-by" author="platform">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="infra_connection_test_log"/>
                <not>
                    <columnExists tableName="infra_connection_test_log" columnName="last_modified_by"/>
                </not>
            </and>
        </preConditions>
        <addColumn tableName="infra_connection_test_log">
            <column name="last_modified_by" type="varchar(50)"/>
        </addColumn>
    </changeSet>

    <changeSet id="20251009-02-infra-conn-log-add-last-modified-date" author="platform">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="infra_connection_test_log"/>
                <not>
                    <columnExists tableName="infra_connection_test_log" columnName="last_modified_date"/>
                </not>
            </and>
        </preConditions>
        <addColumn tableName="infra_connection_test_log">
            <column name="last_modified_date" type="timestamp"/>
        </addColumn>
    </changeSet>

    <changeSet id="20251010-01-infra-datasource-status" author="platform">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="infra_data_source"/>
        </preConditions>
        <addColumn tableName="infra_data_source">
            <column name="status" type="varchar(32)" defaultValue="INACTIVE"/>
        </addColumn>
        <addColumn tableName="infra_data_source">
            <column name="last_verified_at" type="timestamp"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
